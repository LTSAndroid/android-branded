<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="android:homeAsUpIndicator">@drawable/menu_icon</item>
    </style>)



    <!-- The base state of the multi state button-->
    <style name="MultiStateButtonBase">
        <item name="android:background">@drawable/multibuttonbaseshape</item>
        <item name="android:shadowColor">#3384ff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MultiStateButtonBaseForSubscription">
        <item name="android:background">@drawable/multibuttonbaseshape</item>
        <item name="android:shadowColor">#3384ff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">#ffffff</item>
    </style>





</resources>
